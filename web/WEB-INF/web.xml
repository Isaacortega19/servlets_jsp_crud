<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>GuardarPersona</servlet-name>
        <servlet-class>Servlets.GuardarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarPersona</servlet-name>
        <servlet-class>Servlets.actualizarPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarPersona</servlet-name>
        <servlet-class>Servlets.borrarPersona</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuardarPersona</servlet-name>
        <url-pattern>/GuardarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarPersona</servlet-name>
        <url-pattern>/actualizarPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarPersona</servlet-name>
        <url-pattern>/borrarPersona</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
